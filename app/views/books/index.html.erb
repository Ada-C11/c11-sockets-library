<h1>Welcome to the Book List</h1>

<p><%= "I am shouting this sentence".upcase %></p>

<p>There are <%= @books.length %> books available to checkout</p>

<section class="featured-book">
  <% if @featured_book %>
    <p>
      Featured book: <%= @featured_book[:title] %> by <%= @featured_book[:author] %>
    </p>
  <% else %>
    <p>No featured book today :(</p>
  <% end %>
</section>

<ul>
  <% @books.each do |book| %>
    <li>
      <strong><%= book[:title] %></strong>
      by <%= book[:author] %>
    </li>
  <% end %>
</ul>